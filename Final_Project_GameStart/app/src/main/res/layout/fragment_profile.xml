<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="#0C2D48">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"
            android:id="@+id/ProfilePicture"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileUsername"
            android:text="placeholder"
            android:textColor="#FFFF"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/ProfilePicture"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProfileChangeUsernameButton"
        android:fontFamily="@font/roboto_black"
        android:text="Change Username"
        app:layout_constraintTop_toBottomOf="@id/ProfileUsername"
        android:layout_marginTop="70dp"
        android:backgroundTint="#145DA0"
        android:radius="0dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/ProfileUsernameEditText"
            app:layout_constraintLeft_toRightOf="@id/ProfileChangeUsernameButton"
            app:layout_constraintTop_toBottomOf="@id/ProfileUsername"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/no_radius"
            android:textColor="#FFFF"
            android:fontFamily="@font/roboto_light"
            android:paddingLeft="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileChangePassword"
            android:fontFamily="@font/roboto_black"
            android:text="Change Password"
            app:layout_constraintTop_toBottomOf="@id/ProfileChangeUsernameButton"
            android:layout_marginTop="70dp"
            android:backgroundTint="#145DA0"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />


        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/ProfilePasswordEditText"
            app:layout_constraintLeft_toRightOf="@id/ProfileChangePassword"
            app:layout_constraintTop_toBottomOf="@id/ProfileUsernameEditText"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/no_radius"
            android:textColor="#FFFF"
            android:fontFamily="@font/roboto_light"
            android:paddingLeft="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileChangeImage"
            android:fontFamily="@font/roboto_black"
            android:text="Change Image Profile"
            app:layout_constraintTop_toBottomOf="@id/ProfileChangePassword"
            android:layout_marginTop="70dp"
            android:backgroundTint="#145DA0"
            android:radius="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>







</RelativeLayout>