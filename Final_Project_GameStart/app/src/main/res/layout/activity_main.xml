<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#0C2D48"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">









    <TextView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/Title"
        android:text="GameStart"
        android:textSize="70sp"
        android:textFontWeight="400"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:shadowColor="#80FFFFFF"
        android:shadowDx="0"
        android:shadowDy="50"
        android:shadowRadius="100"
        android:fontFamily="@font/roboto_bold"/>


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/Logo"
        android:src="@drawable/final_gamestart_logo"
        app:layout_constraintTop_toBottomOf="@id/Title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Welcome"
        android:text="Welcome to GameStart"
        android:textColor="#FFFF"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Title"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/roboto_regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Motto1"
        android:text="One Store, All the "
        android:textStyle="italic"
        android:textColor="#FFFF"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/Welcome"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Motto2"
        android:text="Games"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FFFF"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="280dp"
        app:layout_constraintTop_toBottomOf="@id/Welcome"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UserName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="#FFFF"
        android:hint="Enter your Username"
        android:textColorHint="#B3FFFFFF"
        android:textStyle="italic"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/UserName"
        android:layout_marginTop="20dp"
        android:id="@+id/Password"
        android:textStyle="italic"
        android:hint="Enter Your Password"
        android:textColorHint="#B3FFFFFF"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textColor="#FFFF"
        />


    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/LogInButton"
        android:backgroundTint="#145DA0"
        android:text="Log In"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_black"
        />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterButton"
        android:backgroundTint="#145DA0"
        android:text="Register"
        app:layout_constraintTop_toBottomOf="@id/Password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/roboto_black"/>





</androidx.constraintlayout.widget.ConstraintLayout>