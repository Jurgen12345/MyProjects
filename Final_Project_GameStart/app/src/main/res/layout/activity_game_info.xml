<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C2D48"
    tools:context=".GameInfoActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/GameInfoImageView"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/GameInfoImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Placeholder"
        android:textSize="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FFFF"
        android:id="@+id/GameInfoTitle"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/GameInfoTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:text="Placeholder genre"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="10dp"
        android:id="@+id/GameInfoGenre"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GameInfoDescription"
        app:layout_constraintTop_toBottomOf="@id/GameInfoGenre"
        android:layout_marginTop="20dp"
        android:text="placeholder description"
        android:textColor="#FFFF"
        android:fontFamily="@font/roboto_italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back"
        android:alpha="0.6"
        android:id="@+id/BackImageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/final_gamestart_logo"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textSize="30dp"
        android:text="GameStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#FFFF"
        android:layout_marginTop="30dp"
        android:shadowColor="#80FFFFFF"
        android:shadowDx="0"
        android:shadowDy="50"
        android:shadowRadius="100"
        android:textAlignment="center"/>






</androidx.constraintlayout.widget.ConstraintLayout>